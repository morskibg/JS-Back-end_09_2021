<div class="card-deck d-flex justify-content-center">            
		<div class="card mb-4">
				<img class="card-img-top"
						src="{{imageUrl}}"
						alt="{{title}}" width="400">
				<div class="card-body">
						<h4 class="card-title">{{title}}</h4>
				</div>
				<div class="card-footer">
						{{#if ../user}}
						<a href="/custom/details/{{_id}}"><button type="button" class="btn btn-primary">Details</button></a>
						<small class="float-right">{{createdAt}}</small>
						{{else}}
						<small class="float-right">{{usersCount}}</small>
						{{/if}}
				</div>
		</div>                
</div>    