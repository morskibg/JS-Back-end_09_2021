<main>
	<div class="container">

		<section class="details">
			<h1>Theater title: {{title}}</h1>
			<div>
				<img src="{{imageUrl}}" />
			</div>
		</section>

		<section class="details">
			<h3>Theater Description</h3>
			<p>{{description}}</p>
			{{#if user}}
			<div class="buttons">
				{{#if isOwn}}
				<a class="btn delete" href="/custom/delete/{{_id}}">Delete</a>
				<a class="btn edit" href="/custom/edit/{{_id}}">Edit</a>
				{{else}}
				{{#if alreadyLiked}}
				<span class="liked">You have already liked this play!</span>
				{{else}}
				<a class="btn like" href="/custom/like/{{_id}}">Like</a>
				{{/if}}
				{{/if}}
			</div>
			{{/if}}
		</section>
	</div>
</main>